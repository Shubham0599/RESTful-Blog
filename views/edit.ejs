<% include ./partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>" id="title" />
        </div>
        <div class="field">
            <label for="url">Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>" id="url" />

        </div>
        <div class="field">
            <label for="body">Body</label>
            <textarea name="blog[body]" id="body" cols="30" rows="10" required><%=blog.body%></textarea>
        </div>
        <input class="ui green basic button" type="submit" />
    </form>
</div>

<% include ./partials/footer.ejs %>